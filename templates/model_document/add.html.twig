{% block javascripts %}
<script>
    $(document).ready(function () {
        $("#infoSelect").on("change", function (event) {
            //alert( $(this).val());
            event.preventDefault();
            setcontent($(this).val());
        });

        function setcontent(element) {
            var myElement = CKEDITOR.dom.element.createFromHtml(element);
            CKEDITOR.instances.model_document_content.insertHtml(element);
            //  CKEDITOR.instances.model_document_content.insertHtml(myElement.$.outerHTML);
        }
    });
</script>
{% endblock %}