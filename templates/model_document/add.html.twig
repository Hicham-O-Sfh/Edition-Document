{% extends 'base.html.twig' %}

{% block title %}ModelDocument index{% endblock %}

{% block body %}

<div class="col-6">..
    <div class="d-flex">

        <a href="{{ path('model_document_index') }}" class="btn btn-outline-primary">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-return-left" fill="currentColor"
                xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                    d="M5.854 5.646a.5.5 0 0 1 0 .708L3.207 9l2.647 2.646a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 0 1 .708 0z">
                </path>
                <path fill-rule="evenodd"
                    d="M13.5 2.5a.5.5 0 0 1 .5.5v4a2.5 2.5 0 0 1-2.5 2.5H3a.5.5 0 0 1 0-1h8.5A1.5 1.5 0 0 0 13 7V3a.5.5 0 0 1 .5-.5z">
                </path>
            </svg>
        </a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <form action="{{path('add')}}" method="POST">
                <div class="card-header"><i class="fa fa-table"></i> Document </div>
                <div class="card-body">
                    <label for="Model">Intitule</label>
                    <div class="col-6">
                        <input type="text" class="form-control" placeholder="Intitule" name="modelname">
                        <label for="Model">Details</label>
                        <div class="col-6">
                            <textarea name="modeldetails" rows="5" cols="80"></textarea>
                        </div>
                    </div>
                    <div class="col">
                        <div class="row m-2">
                            <div class="d-flex justify-content-center p-1">
                                <button class=" btn btn-outline-primary" id="bnom"
                                    name="<span class='nom'> @{Nom&prenom} </span>">Nom & Prenom</button>
                            </div>
                            <div class="d-flex justify-content-center p-1">
                                <button class=" btn btn-outline-primary" id="bdate"
                                    name="<span class='date' > @{Date} </span>">date</button>

                            </div>
                            <div class="d-flex justify-content-center p-1">
                                <button class=" btn btn-outline-primary" id="bnum"
                                    name="<span class='num'> @{num} </span>">num</button>
                            </div>
                        </div>
                        <script src="//cdn.ckeditor.com/4.14.1/full/ckeditor.js"></script>
                        <textarea name="content" id="content" rows="10" cols="80">
            </textarea>
                        <script>
                            CKEDITOR.replace('content');
                        </script>
                        <div class="d-flex justify-content-end p-1">
                            <input class=" btn btn-outline-primary" type="submit" value="Ajouter" />
                        </div>
            </form>
        </div>
    </div>


</div>
</div>
</div>

{% endblock %}
{% block javascripts %}
<script>
    //Name et Prenom               
    document.getElementById('bnom').addEventListener("click", function (e) {
        e.preventDefault();
        setcontent(e.target.name);
    });
    // Date
    document.getElementById('bdate').addEventListener("click", function (e) {
        e.preventDefault();
        setcontent(e.target.name);
    });
    //Num 
    document.getElementById('bnum').addEventListener("click", function (e) {
        e.preventDefault();
        setcontent(e.target.name);
    });

    function setcontent(v) {

        var element = CKEDITOR.dom.element.createFromHtml(v);
        data = CKEDITOR.instances.content.insertElement(element);
    }
</script>
{% endblock %}