{% extends 'base.html.twig' %}

{% block title %}PersonnelDiplome index{% endblock %}

{% block body %}


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>DateObtention</th>
                <th>Etablissement</th>
                <th>Specialite</th>
                <th>CheminDoc</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personnel_diplome in personnel_diplomes %}
            <tr>
                <td>{{ personnel_diplome.id }}</td>
                <td>{{ personnel_diplome.designation }}</td>
                <td>{{ personnel_diplome.dateObtention ? personnel_diplome.dateObtention|date('Y-m-d') : '' }}</td>
                <td>{{ personnel_diplome.etablissement }}</td>
                <td>{{ personnel_diplome.specialite }}</td>
                <td>{{ personnel_diplome.cheminDoc }}</td>
                <td>
                    <a href="{{ path('personnel_diplome_show', {'id': personnel_diplome.id}) }}">show</a>
                    <a href="{{ path('personnel_diplome_edit', {'id': personnel_diplome.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('personnel_diplome_new') }}">Create new</a>
{% endblock %}
